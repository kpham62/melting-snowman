import java.util.Random;
import java.util.*;
public class HangmanGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Welcome to Melting Snowman!");

        //Array of math problems
        String[] problems = {
                "2 + 2", // easy
                "9 - 4", // medium
                "5 * 6" //hard
        };
        int[] answers = {4, 5, 30};

        //Select Difficulty level
        System.out.println("Choose the difficulty level (Type 1, 2, or 3): ");
        System.out.println("1. Easy");
        System.out.println("2. Medium");
        System.out.println("3. Hard");
        int level = scanner.nextInt();

        // Validate the chosen level
        if (level < 1 || level > 3) {
            System.out.println("Invalid difficulty level. Exiting the game.");
            return;
        }

        // Select a random math problem based on the chosen difficulty level
        Random random = new Random();
        int problemIndex = level - 1;
        String problem = problems[problemIndex];
        int answer  = answers[problemIndex];

        int wordLength = problem.length();
        char[] guessedLetters = new char[wordLength];

        for (int i = 0; i < wordLength; i++) {
            if (problem.charAt(i) == ' ') {
                guessedLetters[i] = ' ';
            }
            else {
                guessedLetters[i] = '_';
            }
        }

        int tries = 6; // Number of tries remaining

        while (tries > 0) {
            //Display the current state of the word
            System.out.println("Current problem: " + String.valueOf(guessedLetters));

            //Prompt the user to guess a letter
            System.out.println("Enter your answer: ");
            int guess = scanner.nextInt();

            if (guess == answer) {
                System.out.println("Correct!");
                break;
            }
            else {
                tries--;
                System.out.println("Wrong answer! Tries remaining: " + tries);
            }
        }
        if (tries == 0) {
            System.out.println("You failed to solve the problem. Game over.");
        }
        else {
            System.out.println("You win!");
        }
    }
}
